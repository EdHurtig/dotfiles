#!/usr/bin/env bash

# Make sure we’re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# Tap additional Homebrew repositories
brew tap homebrew/dupes
brew tap homebrew/versions
brew tap phinze/homebrew-cask
# brew tap josegonzalez/homebrew-php

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils
echo "Don’t forget to add $(brew --prefix coreutils)/libexec/gnubin to \$PATH."

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, g-prefixed
brew install findutils

# Install Bash 4, completion, and Generic Colouriser
brew install bash
brew install bash-completion
brew install grc

# Install RingoJS and Narwhal
# Note that the order in which these are installed is important; see http://git.io/brew-narwhal-ringo.
# brew install ringojs
# brew install narwhal

# Install more recent versions of some OS X tools
brew install homebrew/dupes/grep
# This formula didn’t work well last time I tried them:
# brew install homebrew/dupes/screen
brew install vim
# Install wget with IRI support
brew install wget --enable-iri
brew install python

# Updated versions of server software
# brew install php54
# brew install mysql

# Install other useful binaries
brew install ack
#brew install exiv2
brew install git
# brew install imagemagick
# brew install lynx
brew install node
# brew install pigz
# brew install rename
# brew install rhino
# brew install tree
# brew install webkit2png
# brew install zopfli
# brew install lua52

# Install native apps
brew install brew-cask

function installcask() {
	brew cask install "${@}" 2> /dev/null
}

installcask dropbox
installcask google-chrome
installcask google-chrome-canary
installcask imagealpha
installcask imageoptim
installcask iterm2
# installcask macvim
# installcask miro-video-converter
installcask sublime-text
installcask the-unarchiver
# installcask tor-browser
installcask transmission
# installcask ukelele
installcask virtualbox
installcask vlc
installcask alfred
installcask hip-chat
installcask codekit
installcask daisy-disk
installcask skype
installcask comic-book-lover
installcask comic-book-lover-sync
installcask ibank
installcask launch-control
installcask sitesucker
installcask toggl-desktop
installcask diffmerge
isntallcask little-snitch
installcask virtualbox

# Add Caskroom to alfred search paths
brew cask alfred link

# Install hub github.com/defunkt/hub
brew install hub

# Install rbenv
brew install rbenv
brew install ruby-build
rbenv install 1.9.3-p429
rbenv global 1.9.3-p429

# Uninstall all gems
gem list | cut -d" " -f1 | xargs gem uninstall -aIx

# Update Rubygems to latest
gem update --system

# Reinstall all gems
gem install \
	bourbon \
	bundler \
	compass \
	chef \
	knife-ec2 \
	knife-github-cookbooks \
	capistrano \
	capistrano-ext \
	capistrano-gitflow \
	railsless-deploy \
	colored \
	colorize \
	deadweight \
	less \
	localtunnel \
	markdown2confluence \
	oily_png \
	puppet-lint \
	ruby-lint \
	therubyracer \
	twig

# Remove outdated versions from the cellar
brew cleanup
